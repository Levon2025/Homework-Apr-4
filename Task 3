#include <stdio.h>

    int fact(int num){

        if(num == 0 || num == 1){
                return 1;
            }else{
                 return num * fact(num - 1); 
                } 
    }
        int main(){
            int num = 0;
            printf("Enter the number");
            scanf("%d",&num);
            if( num <= 0){
                printf("It's cant have a fact");
                }else{
                     printf("%d %d",num,fact(num));   
                    }

                    return 0;
        }
